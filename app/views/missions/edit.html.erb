<form action="/missions/<%= @mission.id %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH"/>

  <p>Edit mission:</p>
  <label for="mission_name">Mission name:</label><br>
  <input type="text" name="mission_name" id="mission_name" value=<%= @mission.mission_name %>><br/>

  <label for="mission_language">Mission language:</label><br>
  <input type="text" name="mission_language" id="mission_language" value=<%= @mission.mission_language %>><br/>

  <label for="country">Country:</label><br>
  <input type="text" name="country" id="country" value=<%= @mission.country%>><br/>

  <label for="members_baptized">Number of members baptized:</label><br>
  <input type="integer" name="members_baptized" id="members_baptized" value=<%= @mission.members_baptized %>><br/>

  <p>Service mission?</p>
  <input type="radio" name="foreign_mission" value="true" id="yforeign_mission">
  <label for="foreign_mission">Yes</label><br>
  <input type="radio" name="foreign_mission" value="false" id="nforeign_mission" checked=true>
  <label for="foreign_mission">No</label><br>

  <input type="submit" value="Edit Mission">
</form>