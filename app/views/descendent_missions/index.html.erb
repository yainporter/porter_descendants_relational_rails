<nav>
  <a href="/descendents">Descendants Index</a>
  <a href="/missions">Missions Index</a>
</nav>

<h1><%= @descendent.full_name %>'s Mission</h1>
<% @missions.each do |mission|  %>
<h3><%= mission.mission_name %></h3>
<p>Language: <%= mission.mission_language %></p>
<p>Country: <%= mission.country %></p>
<p>Number of members baptized: <%= mission.members_baptized %></p>
<p>Was this a service mission? <%= mission.service_mission? %></p>
<% end %>

<div>
  <a href="/descendents/<%= @descendent.id %>/missions/new">Create Mission</a>
  <%= link_to "Sort Alphabetically", descendent_missions_path(@descendent.id, sort: "mission_name") %>
</div>