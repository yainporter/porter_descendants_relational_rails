<nav>
  <a href="/descendents">Descendants Index</a>
  <a href="/missions">Missions Index</a>
</nav>

<h1><%= @descendent.full_name %></h1>

<ul>
  <li>Birthday: <%= @descendent.birthday %></li>
  <li>Allergies? <%= @descendent.allergies? %></li>
  <li>Married? <%= @descendent.married? %></li>
  <li>Grandchildren? <%= @descendent.grandchildren? %></li>
  <li>Number of languages spoken: <%= @descendent.languages %></li>
  <li>Number of missions served: <%= @missions_served %></li>
  <li><%= link_to "Delete", destroy_descendent_and_missions_path(@descendent), method: :delete, data: { confirm: 'Are you sure?'}%></li>
</ul>

<p><%= @descendent.full_name %>'s <a href="/descendents/<%= @descendent.id %>/missions">Mission</a></p>
<div><a href="/descendents/<%= @descendent.id %>/edit" id="update">Update <%= @descendent.full_name %>'s Info</a></div>